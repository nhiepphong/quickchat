<!DOCTYPE html>
<html>
<head>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>    
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tag %>
</head>
<body>
  <% if flash.any? %>
    <% flash.each do |key, value| %>
    <div class="alert <%= flash_class_name(key) %>">
      <%= value %>
    </div>
    <% end %>
  <% end %>
  <nav class="navbar navbar-light bg-faded">

    <!-- Toggle Button -->
    <button class="navbar-toggler hidden-sm-up" type="button" data-toggle="collapse" data-target="#nav-content">
      &#9776;
    </button>
    <!-- Nav Content -->
    <div class="collapse navbar-toggleable-xs" id="nav-content">
      <a class="navbar-brand" href="/"><%= image_tag 'logo-small.png' %></a>
      <ul class="nav navbar-nav">
        <% if current_user %>

        <li class="nav-item">
          <a class="nav-link">Welcome, <%= current_user.name %></a>
        </li>

        <li class="nav-item">
          <a class="nav-link" href="<%= logout_path %>">Log out</a>
        </li>

        <li class="nav-item">
          <a class="nav-link" href="<%= users_path %>">Messenger</a>
        </li>
        <% else %>
        <li class="nav-item">
          <a class="nav-link" href="<%= new_user_path %>">Sign Up</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="<%= new_session_path %>">Sign In</a>
        </li>
        <% end %>
      </ul>
    </div>
  </nav>

  <%= yield %>

  <footer class="footer-12">
    <div class="container">
        Made with <%= image_tag('heart') %> in QuickChat
    </div>
  </footer>    

</body>
</html>

<section class="header-11-sub">
	<div class="background">&nbsp;</div>
	<div class="container">
		<div class="row">
			<div class="col-sm-4 center-block user-block">
				<h3>QuickChat Login</h3>
				<p>QuickChat is the first chat website just for experienced Ruby on Rails engineers.</p>
				<div class="signup-form">
					<%= form_tag sessions_path, method: 'post' do %>
					<div class="form-group">
						<%= text_field_tag :email, nil, placeholder: "Your E-mail" ,class: 'form-control' %>
					</div>
					<div class="form-group">
						<div class="half-width">
							<%= password_field_tag :password, nil, placeholder: "Password", class: 'form-control' %>
						</div>
					</div>
					<div class="form-group">
						<%= submit_tag "Sign In", class: 'btn btn-block btn-info' %>
					</div>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</section>
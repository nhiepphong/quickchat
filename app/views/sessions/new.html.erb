<section class="header-11-sub">
	<div class="background">&nbsp;</div>
	<div class="container">
		<div class="row">
			<div class="col-sm-4 center-block user-block">
				<h3>The Dating Site for Ruby Experts</h3>
				<p>CoderDating is the first dating website just for experienced Ruby on Rails engineers.</p>
				<div class="signup-form">
					<%= form_for(:session, url: login_path) do |f| %>
					<div class="form-group">
						<%= f.text_field 'email', class: 'form-control', placeholder: 'Your E-mail' %>
					</div>
					<div class="form-group">
						<div class="half-width">
							<%= f.password_field 'password', class: 'form-control', placeholder: 'Password' %>
						</div>
					</div>
					<div class="form-group">
						<%= f.submit 'Sign In', class: 'btn btn-block btn-info' %>
					</div>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</section>